<%- model_class = Consultation -%>
<div class="page-header">
  <h1>Bit√°cora de consultas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha de consulta</th>
      <th>Matricula del alumno</th>
      <th>Publicacion consultada</th>
    </tr>
  </thead>
  <tbody>
    <% @consultations.each do |consultation| %>
      <tr>
        <td><%= consultation.fecha_consulta %></td>
        <td><%= consultation.matricula %></td>
        <td><%= consultation.nombre_publicacion %></td>
        <td>
          <%##=link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_consultation_path(consultation), :class => 'btn btn-mini' %>
          <%##= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      consultation_path(consultation),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

