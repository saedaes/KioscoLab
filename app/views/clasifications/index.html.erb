<%- model_class = Clasification -%>
<div class="page-header">
  <center><h1>Clasificaciones</h1></center>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clasifications.each do |clasification| %>
      <tr>
        <td><%= link_to clasification.id, clasification_path(clasification) %></td>
        <td><%= clasification.nombre %></td>
        <td><%= clasification.descripcion %></td>
        <td><%=l clasification.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_clasification_path(clasification), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      clasification_path(clasification),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Agregar clasificacion",
            new_clasification_path,
            :class => 'btn btn-primary' %>
