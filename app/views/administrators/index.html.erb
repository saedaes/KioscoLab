<%- model_class = Administrator -%>
<div class="page-header">
  <center><h1>Listado de Administradores</h1></center>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Numero de empleado</th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>
      <th>Puesto</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.numEmpleado %></td>
        <td><%= administrator.nombre %></td>
        <td><%= administrator.direccion %></td>
        <td><%= administrator.telefono %></td>
        <td><%= administrator.idPuesto %></td>
        <td>
          <%= link_to 'Editar',
                      edit_administrator_path(administrator), :class => 'btn btn-mini' %>
          <%= link_to 'Borrar',
                      administrator_path(administrator),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo',
            new_administrator_path,
            :class => 'btn btn-primary' %>
