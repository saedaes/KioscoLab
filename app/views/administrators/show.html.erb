<%- model_class = Administrator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:numEmpleado) %>:</strong></dt>
  <dd><%= @administrator.numEmpleado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @administrator.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @administrator.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @administrator.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idPuesto) %>:</strong></dt>
  <dd><%= @administrator.idPuesto %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Regresar',
              administrators_path, :class => 'btn'  %>
  <%= link_to 'Editar',
              edit_administrator_path(@administrator), :class => 'btn' %>
  <%= link_to 'Borrar',
              administrator_path(@administrator),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')),
              :class => 'btn btn-danger' %>
</div>
