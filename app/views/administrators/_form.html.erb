<%= form_for @administrator, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label 'Numero de empleado', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :numEmpleado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direccion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefono, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefono, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Puesto', :class => 'control-label' %>
    <div class="controls">
      <%= f.select :idPuesto, Puesto.all.collect{ |p| [p.Nombre, p.idPuesto] }, {:include_blank => "-- Selecciona un puesto --"} %>
      <%=link_to 'Puestos', puestos_path%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Aceptar', :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',
                administrators_path, :class => 'btn' %>
  </div>
<% end %>
