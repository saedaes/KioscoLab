<%- model_class = Publication -%>
<div class="page-header">
	<br />
  <center><h1><%= @publication.titulo %></h1></center>
</div>

<center><img width="600" height="500" src="<%= @publication.imagen %>" /></center>
<br /> 
<%= @publication.contenido %>
<br />
<br />


<div class="form-actions">
  <%= link_to "Regresar",
              publications_path, :class => 'btn'  %>
  <% if current_user %>
	  <%= link_to "Editar",
	              edit_publication_path(@publication), :class => 'btn' %>
	  <%= link_to "Borrar",
	              publication_path(@publication),
	              :method => 'delete',
	              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	              :class => 'btn btn-danger' %>
  <%end%>
</div>
