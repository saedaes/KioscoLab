<%- model_class = Publication -%>
<div class="page-header">
 <center> <h1>Listado de publicaciones</h1> </center>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= "Titulo"%></th>
      <th><%= "Imagen"%></th>
      <th><%= "ClasificaciÃ³n" %></th>
      <th><%= "Numero de empleado" %></th>
      <th><%= "Fecha y hora de publicacion" %></th>
      <th><%= "Acciones" %></th>
    </tr>
  </thead>
  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= link_to publication.titulo, publication_path(publication) %></td>
        <td><img width="300" height="200" src="<%= publication.imagen %>"/></td>
        <td><%= publication.clasificacion %></td>
        <td><%= publication.numEmpleado %></td>
        <td><%=l publication.created_at %></td>
        <% if current_user %>
        <td>
          <%= link_to "Editar",
                      edit_publication_path(publication), :class => 'btn btn-mini' %>
          <%= link_to "Borrar",
                      publication_path(publication),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

