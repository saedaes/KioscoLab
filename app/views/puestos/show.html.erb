<%- model_class = Puesto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>ID Puesto</strong></dt>
  <dd><%= @puesto.idPuesto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Nombre) %>:</strong></dt>
  <dd><%= @puesto.Nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Descripcion) %>:</strong></dt>
  <dd><%= @puesto.Descripcion %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Regresar',
              puestos_path, :class => 'btn'  %>
  <%= link_to 'Editar',
              edit_puesto_path(@puesto), :class => 'btn' %>
  <%= link_to 'Borrar',
              puesto_path(@puesto),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')),
              :class => 'btn btn-danger' %>
</div>
