<%- model_class = Puesto -%>
<div class="page-header">
  <center><h1>Listado de Puestos</h1></center>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID Puesto</th>
      <th><%= model_class.human_attribute_name(:Nombre) %></th>
      <th><%= model_class.human_attribute_name(:Descripcion) %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @puestos.each do |puesto| %>
      <tr>
        <td><%= puesto.idPuesto %></td>
        <td><%= puesto.Nombre %></td>
        <td><%= puesto.Descripcion %></td>
        <td>
          <%= link_to 'Editar',
                      edit_puesto_path(puesto), :class => 'btn btn-mini' %>
          <%= link_to 'Borrar',
                      puesto_path(puesto),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo',
            new_puesto_path,
            :class => 'btn btn-primary' %>
